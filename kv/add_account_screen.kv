<AddAccountScreen>
    MDToolbar:
        title: "Passbank"
        elevation: 10
        pos_hint: {"top": 1}
        left_action_items: [["arrow-left", lambda button: root.goBackBtn()]]

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "Add New Account"
            halign: "center"
            font_style: "Button"

        MDTextField:
            id: site_field
            hint_text: "Site"
            write_tab: False

            helper_text_mode: "on_error"
            on_text: root.checkField(self, self.text)

        MDTextField:
            id: email_field
            hint_text: "EMail"
            write_tab: False

        MDTextField:
            id: username_field
            hint_text: "Username"
            write_tab: False

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: password_field
                hint_text: "Password"
                password: True
                write_tab: False

                helper_text_mode: "on_error"
                on_text: root.checkField(self, self.text)

            MDIconButton:
                id: show_password_button
                icon: "eye-outline"
                on_press: root.showPasswordBtn(self, password_field, confirm_password_field)

        MDTextField:
            id: confirm_password_field
            hint_text: "Confirm Password"
            password: True
            write_tab: False

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkConfirmField(self, self.text)
            on_text_validate: root.addAccountButton(site_field, password_field, confirm_password_field)

        MDRaisedButton:
            text: "Add Account"
            pos_hint: {"center_x": .5}
            on_press: root.addAccountButton(site_field, password_field, confirm_password_field)
