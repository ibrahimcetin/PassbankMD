<AddAccountScreen>
    MDToolbar:
        title: "Passbank"
        elevation: 10
        pos_hint: {"top": 1}
        left_action_items: [["arrow-left", lambda button: root.goBackBtn()]]

    MDBoxLayout:
        padding: dp(10)
        spacing: dp(10)
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_height: True
        size_hint_x: .7

        MDLabel:
            text: "Add New Account"
            halign: "center"
            font_style: "Button"

        MDTextField:
            id: add_acc_site_input
            hint_text: "Site"

            helper_text_mode: "on_error"
            on_text: root.checkField(self, self.text)

        MDTextField:
            id: add_acc_email_input
            hint_text: "EMail"

        MDTextField:
            id: add_acc_username_input
            hint_text: "Username"

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: add_acc_pass_input
                hint_text: "Password"
                password: True

                helper_text_mode: "on_error"
                on_text: root.checkField(self, self.text)

            MDIconButton:
                id: add_acc_show_password_btn
                icon: "eye-outline"
                on_press: root.showPasswordBtn()

        MDTextField:
            id: add_acc_conf_pass_input
            hint_text: "Confirm Password"
            password: True

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkConfirmField(self, self.text)

        MDRaisedButton:
            text: "Add Account"
            pos_hint: {"center_x": .5}
            on_press: root.addAccountBtn()
