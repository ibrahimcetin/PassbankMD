#:import Window kivy.core.window.Window

<RVOneLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVTwoLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVThreeLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)


<ContentCustomBottomSheet>:
    orientation: "vertical"
    size_hint_y: None
    height: Window.height/2

    MDToolbar:
        id: toolbar
        elevation: 10
        pos_hint: {"top": 1}
        right_action_items: [["trash-can-outline", lambda button: root.deleteAccountDialog()], ["eye-outline", lambda button: root.showPassword()], ["content-copy", lambda button: root.copyPassword()], ["content-save", lambda button: root.updateAccount(site_field, confirm_new_password_field)]]

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(10)
        spacing: dp(10)

        MDTextField:
            id: site_field
            hint_text: "Site"
            write_tab: False

            helper_text_mode: "on_error"
            on_text: root.checkSiteField(self, self.text)

        MDTextField:
            id: email_field
            hint_text: "EMail"
            write_tab: False

        MDTextField:
            id: username_field
            hint_text: "Username"
            write_tab: False

        MDSeparator:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: new_password_field
                hint_text: "Password"
                password: True
                write_tab: False

            MDIconButton:
                id: show_new_password_button
                icon: "eye-outline"
                on_press: root.showNewPasswordButton(self, new_password_field, confirm_new_password_field)

        MDTextField:
            id: confirm_new_password_field
            hint_text: "New Password Confirm"
            password: True
            write_tab: False

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkConfirmField(self, self.text)

        Widget:
            size_hint_y: None
            height: dp(20)


<MainScreen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: [0, dp(10)]
        spacing: dp(10)

        MDBoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MDIconButton:
                icon: 'magnify'

            MDTextField:
                id: search_field
                hint_text: 'Search Account'
                on_text: root.initUI()

            MDIconButton:
                icon: 'cog-outline'
                on_press: root.manager.setOptionsScreen()

        RecycleView:
            id: recycle_view
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, None
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

    MDFloatingActionButtonSpeedDial:
        data: root.button_data
        rotation_root_button: True
        callback: root.actionButton
