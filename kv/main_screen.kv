<RVOneLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVTwoLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVThreeLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)


<ContentCustomBottomSheet>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(400)

    MDToolbar:
        id: sheet_toolbar
        elevation: 10
        pos_hint: {"top": 1}
        right_action_items: [["trash-can-outline", lambda button: root.deleteAccountDialog()], ["eye-outline", lambda button: root.showPasswordBtn()], ["content-copy", lambda button: root.copyPassword()], ["content-save", lambda button: root.updateAccount()]]

    MDBoxLayout:
        adaptive_height: True
        padding: dp(10)
        spacing: dp(10)
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint_x: .7

        MDTextField:
            id: sheet_site_input
            hint_text: "Site"
            write_tab: False

            helper_text_mode: "on_error"
            on_text: root.checkSiteField(self, self.text)

        MDTextField:
            id: sheet_email_input
            hint_text: "EMail"
            write_tab: False

        MDTextField:
            id: sheet_username_input
            hint_text: "Username"
            write_tab: False

        MDSeparator:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: sheet_pass_input
                hint_text: "Password"
                password: True
                write_tab: False

            MDIconButton:
                id: sheet_show_new_password_btn
                icon: "eye-outline"
                on_press: root.showNewPasswordBtn()

        MDTextField:
            id: sheet_confirm_pass_input
            hint_text: "New Password Confirm"
            password: True
            write_tab: False

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkConfirmField(self, self.text)

        Widget:
            size_hint_y: None
            height: dp(20)


<MainScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: [0, dp(10)]

        MDBoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MDIconButton:
                icon: 'magnify'

            MDTextField:
                id: search_field
                hint_text: 'Search Account'
                on_text: root.initUI()

            MDIconButton:
                icon: 'cog-outline'
                on_press: root.manager.setOptionsScreen()

        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                default_size: None, None
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

    MDFloatingActionButtonSpeedDial:
        data: root.btn_data
        rotation_root_button: True
        callback: root.actionBtn
