<LoginScreen>
    MDToolbar:
        title: "Passbank"
        elevation: 10
        pos_hint: {"top": 1}

    MDBoxLayout:
        padding: dp(10)
        spacing: dp(10)
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_height: True
        size_hint_x: .7

        MDLabel:
            text: "Welcome to Passbank"
            halign: "center"
            font_style: "Button"

        Widget:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: login_pass_input
                hint_text: "Password"
                password: True

                helper_text: "Password not correct"
                helper_text_mode: "on_error"
                on_text_validate: root.checkPassword(self, self.text)
                on_text: root.autoLogin(self, self.text)

            MDIconButton:
                id: login_show_password_btn
                icon: "eye-outline"
                on_press: root.showPasswordBtn()

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": .5}
            on_press: root.loginBtn()
