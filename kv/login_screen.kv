<LoginScreen>
    MDToolbar:
        title: "Passbank"
        elevation: 10
        pos_hint: {"top": 1}

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "Welcome to Passbank"
            halign: "center"
            font_style: "Button"

        Widget:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: password_field
                hint_text: "Password"
                password: True
                write_tab: False

                helper_text_mode: "on_error"
                on_text_validate: root.loginButton(self) # run when pressing enter
                on_text: root.fastLogin(self, self.text) if root.fast_login else None

            MDIconButton:
                id: show_password_button
                icon: "eye-outline"
                on_press: root.showPasswordButton(self, password_field)

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": .5}
            on_press: root.loginButton(password_field)
