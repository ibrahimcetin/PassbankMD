<RegisterScreen>
    MDToolbar:
        title: "Passbank"
        elevation: 10
        pos_hint: {"top": 1}

    MDBoxLayout:
        padding: dp(10)
        spacing: dp(10)
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_height: True
        size_hint_x: .7

        MDLabel:
            text: "Welcome to Passbank"
            halign: "center"
            font_style: "Button"

        Widget:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: reg_pass_input
                hint_text: "Password"
                password: True

                helper_text_mode: "on_error"
                on_text: root.checkPasswordField(self, self.text)

            MDIconButton:
                id: reg_show_password_btn
                icon: "eye-outline"
                on_press: root.showPasswordBtn()

        MDTextField:
            id: reg_confirm_pass_input
            hint_text: "Confirm Password"
            password: True

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkPasswords(self, self.text)

        MDRaisedButton:
            text: "Register"
            pos_hint: {"center_x": .5}
            on_press: root.registerBtn()
