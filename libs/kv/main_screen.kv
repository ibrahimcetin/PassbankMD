<RVOneLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVTwoLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)

<RVThreeLineIconListItem>
    IconLeftWidget:
        icon: root.icon
        on_press: root.trigger_action(duration=0)


<OfflineLabel>:
    text: "You are offline"
    size_hint_y: None
    height: dp(20)
    halign: "center"
    valign: "center"
    canvas.before:
        Color:
            rgba: 0.23,0.24,0.25,1
        Rectangle:
            pos: self.pos
            size: self.size


<AccountDetailSheet>:
    id: bottom_sheet
    type: "modal"
    bg_color: "white"
    adaptive_height: True

    MDBottomSheetDragHandle:
        MDBottomSheetDragHandleTitle:
            id: sheet_title
            adaptive_height: True
            font_style: "H6"
            pos_hint: {"center_y": .5}

        MDBottomSheetDragHandleButton:
            icon: "trash-can-outline"
            on_press: root.deleteAccountDialog()

        MDBottomSheetDragHandleButton:
            icon: "qrcode"
            on_press: root.showQRCode()

        MDBottomSheetDragHandleButton:
            icon: "eye-outline"
            on_press: root.showPassword()

        MDBottomSheetDragHandleButton:
            icon: "two-factor-authentication"
            on_press: root.showTwoFactorAuthentication()

        MDBottomSheetDragHandleButton:
            icon: "content-copy"
            on_press: root.copyPassword()

        MDBottomSheetDragHandleButton:
            icon: "content-save"
            on_press: root.updateAccount(site_field, confirm_new_password_field)

    MDBottomSheetContent:
        padding: ["16dp", "0dp", "16dp", "24dp"]

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True

            MDTextField:
                id: site_field
                hint_text: "Site"
                write_tab: False

                helper_text_mode: "on_error"
                on_text: root.checkSiteField(self, self.text)

            MDTextField:
                id: email_field
                hint_text: "EMail"
                write_tab: False

            MDTextField:
                id: username_field
                hint_text: "Username"
                write_tab: False

            MDSeparator:

            MDBoxLayout:
                adaptive_height: True

                MDTextField:
                    id: new_password_field
                    hint_text: "New Password"
                    password: True
                    write_tab: False

                MDIconButton:
                    id: show_new_password_button
                    icon: "eye-outline"
                    on_press: root.showNewPasswordButton(self, new_password_field, confirm_new_password_field)

            MDTextField:
                id: confirm_new_password_field
                hint_text: "New Password Confirm"
                password: True
                write_tab: False

                helper_text: "Passwords not match"
                helper_text_mode: "on_error"
                on_text: root.checkConfirmField(self, self.text)


<TextFieldDialogContent>
    orientation: "vertical"
    size_hint_y: None
    height: "50dp"

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        on_text:
            root.on_text()

<MainScreen>
    id: main_screen

    MDBoxLayout:
        orientation: 'vertical'
        padding: [0, dp(10), 0, 0]
        spacing: dp(10)

        MDBoxLayout:
            size_hint_y: None
            height: self.minimum_height

            MDIconButton:
                icon: 'magnify'

            MDTextField:
                id: search_field
                hint_text: 'Search Account'
                on_text: root.initUI()

            MDIconButton:
                icon: 'cog-outline'
                on_press: root.manager.setOptionsScreen()

        RecycleView:
            id: recycle_view
            key_viewclass: 'viewclass'
            key_size: 'height'
            scroll_wheel_distance: 70
            scroll_type: ['bars', 'content']
            bar_width: 7

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, None
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

    MDFloatingActionButtonSpeedDial:
        data: root.button_data
        root_button_anim: True

    AccountDetailSheet:
        id: bottom_sheet
        max_opening_height: min(self.height, main_screen.height)
        default_opening_height: self.max_opening_height
