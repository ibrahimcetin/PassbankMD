<RegisterScreen>
    MDTopAppBar:
        title: "Passbank"
        pos_hint: {"top": 1}

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "Welcome to Passbank"
            halign: "center"
            font_style: "Button"

        Widget:

        MDBoxLayout:
            adaptive_height: True

            MDTextField:
                id: password_field
                hint_text: "Password"
                password: True
                write_tab: False

                helper_text_mode: "on_error"
                on_text: root.checkPasswordField(self, self.text)

            MDIconButton:
                id: show_password_button
                icon: "eye-outline"
                on_press: root.showPasswordButton(self, password_field, confirm_password_field)

        MDTextField:
            id: confirm_password_field
            hint_text: "Confirm Password"
            password: True
            write_tab: False

            helper_text: "Passwords not match"
            helper_text_mode: "on_error"
            on_text: root.checkPasswords(self, self.text)

        MDRaisedButton:
            text: "Register"
            pos_hint: {"center_x": .5}
            on_press: root.registerButton(password_field, confirm_password_field)
